<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="customer_header" inherit_id="website.layout" name="Customer Header">
            <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
                <attributes name="id">my_header</attributes>
            </xpath>
            <xpath expr="//div[@id='wrapwrap']/header/div" position="before">
                <div class="container">
                    Welcome in our webstie!
                </div>
            </xpath>
        </template>
    </data>
</openerp>
